<UserControl x:Class="XPub.Infrastructure.Views.CreateJobPop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XPub.Infrastructure.Views" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             mc:Ignorable="d" 
                        Width="300"
             Height="300">
    <DockPanel>
        <Button DockPanel.Dock="Bottom"
                Click="Button_Click"
                Content="Ok" />
        <Grid>
            <dxlc:DataLayoutControl CurrentItem="{Binding CreateJobPopUpData}"/>
        </Grid>
    </DockPanel>
</UserControl>
